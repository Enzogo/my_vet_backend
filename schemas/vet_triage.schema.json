{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VetTriage",
  "type": "object",
  "required": ["animal", "urgencia","causas_frecuentes","pasos_recomendados","alerta","responsabilidad"],
  "properties": {
    "animal": { "type": "string", "enum": ["perro","gato","conejo","hurón","ave","loro","canario","pájaro","pez","cobaya","hamster","huron"] },
    "urgencia": {
      "type": "string",
      "enum": ["baja","media","alta","emergencia","desconocida"]
    },
    "causas_frecuentes": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 0
    },
    "pasos_recomendados": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 0
    },
    "alerta": { "type": "string" },
    "responsabilidad": { "type": "string" }
  },
  "additionalProperties": false
}